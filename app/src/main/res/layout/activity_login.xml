<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".pages.LoginActivity">


    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/arrow_back_white" />

        <in.ddw.carinfo.customviews.TextviewMontserratMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="ENTER YOUR MOBILE NUMBER"
            android:textColor="@color/white"
            android:textSize="16dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/layout_background"
        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:paddingTop="12dp"
        android:paddingRight="7dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/flag"
            android:scaleType="centerCrop" />

        <in.ddw.carinfo.customviews.TextviewMontserratMedium
            android:id="@+id/tv_concode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/iv_flag"
            android:text="+91 |"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <in.ddw.carinfo.customviews.EdittextMontserratRegular
            android:id="@+id/ed_mbno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/tv_concode"
            android:background="@null"
            android:hint="Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textSize="16dp">

        </in.ddw.carinfo.customviews.EdittextMontserratRegular>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_sendotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/send_button_background"
        android:padding="3dp"
        android:text="Send OTP"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />


</RelativeLayout>