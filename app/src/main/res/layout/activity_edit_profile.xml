<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/arrow_back_white" />

            <in.ddw.carinfo.customviews.TextviewMontserratMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="18dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


                <in.ddw.carinfo.customviews.TextviewMontserratBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="Your Profile"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <in.ddw.carinfo.customviews.TextviewMontserratMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/cancel"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="12dp"
                app:contentPadding="6dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <in.ddw.carinfo.customviews.TextviewMontserratSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User ID"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:padding="5dp"/>

                    <EditText
                        android:id="@+id/ed_userid"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="6dp"
                        android:drawableLeft="@drawable/person"
                        android:background="@drawable/layout_background"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text=" userid123"
                        android:textColor="@color/black"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="5dp"/>

                    <in.ddw.carinfo.customviews.TextviewMontserratSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="6dp"
                        android:drawableLeft="@drawable/phone"
                        android:background="@drawable/layout_background"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text=" 9876543210"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="5dp"/>

                    <in.ddw.carinfo.customviews.TextviewMontserratSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your State"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="6dp"
                        android:drawableLeft="@drawable/location"
                        android:background="@drawable/layout_background"
                        android:inputType="text"
                        android:text=" Maharashtra"
                        android:textColor="@color/black"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="5dp"/>

                    <in.ddw.carinfo.customviews.TextviewMontserratSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Language"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="6dp"
                        android:drawableLeft="@drawable/globe"
                        android:drawableRight="@drawable/arrowdown"
                        android:background="@drawable/layout_background"
                        android:text=" English"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="5dp"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_sendotp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/send_button_background"
            android:padding="3dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>